<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_now_inspecrion_relase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.bxgis.bxportal.ui.inspection.InspectionDetailActivity"
    >


    <FrameLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:background="@color/btn_blue_login"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/y10">

        <ImageView
            android:id="@+id/back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_back"/>

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:layout_gravity="center"
            android:text="@string/review_feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/release"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ll_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="整改单号："
                    android:textColor="@color/tv_black_787878"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/reinspection_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text=""
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="隐患名称："
                    android:textColor="@color/tv_black_787878"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/reinspection_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text=""
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="隐患级别："
                    android:textColor="@color/tv_black_787878"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/et_hidden_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text=""
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="整改状态："
                    android:textColor="@color/tv_black_787878"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/reinspection_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text=""
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="整改完成日期："
                    android:textColor="@color/tv_black_787878"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/rectify_finish_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text=""
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复查确认人："
                    android:textColor="@color/tv_black_0"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_inspector"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复查验收日期"
                    android:textColor="@color/tv_black_0"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/reinspection_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tv_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:textColor="@color/tv_black_1"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="复查情况反馈"
                    android:textColor="@color/tv_black_0"
                    android:textSize="@dimen/sp_16"/>


            </LinearLayout>

            <com.bxgis.bxportal.widget.CustomEditText
                android:id="@+id/feedback_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_weight="1"
                android:background="@drawable/bg_tv_content"
                android:gravity="left"
                android:minHeight="60dp"
                android:paddingLeft="15px"
                android:text=""
                android:textColor="@color/tv_black_1"
                android:textSize="@dimen/sp_15"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="复查状态 "
                    android:textColor="@color/tv_black_0"
                    android:textSize="@dimen/sp_16"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:drawablePadding="10dip"
                        android:text="通过"
                        >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"

                        android:drawablePadding="10dip"
                        android:text="不通过"
                        >
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"

                android:background="@color/tv_gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_accessory1"
                    android:textColor="@color/tv_black_0"
                    android:textSize="@dimen/sp_16"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_feedback_accessory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/release_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/btn_blue_login"
        android:text="@string/review_commit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>
</RelativeLayout>
