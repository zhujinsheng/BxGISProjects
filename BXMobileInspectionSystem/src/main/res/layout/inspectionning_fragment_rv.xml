<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/tv_gray_b"
             android:orientation="vertical">


    <com.bxgis.bxportal.widget.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/rv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <RelativeLayout
        android:id="@+id/rl_empty_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tv_gray_b"
        android:paddingBottom="@dimen/dp_22"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/empty_data"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_refresh"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/tv_gray_2"
            android:layout_centerHorizontal="true"
            android:text="@string/empty_data_tip"

            />
    </RelativeLayout>


</FrameLayout>