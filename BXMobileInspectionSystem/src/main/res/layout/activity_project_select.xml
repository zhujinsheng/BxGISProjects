<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.bxgis.bxportal.ui.inspection.ProjectSelectActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue_login"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选择巡检事项"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>

    </LinearLayout>

    <com.bxgis.bxportal.widget.filterView.FilterTreeView
        android:id="@+id/filter_tree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y65"
        android:background="@color/tv_gray_line"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y65"
        android:background="@color/tv_gray_line"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x45"
            android:padding="@dimen/x6"
            android:text="取消"
            android:textColor="@color/btn_blue_login"
            android:textSize="@dimen/sp_18"
            />

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/x45"
            android:padding="@dimen/x6"
            android:text="确定"
            android:textColor="@color/btn_blue_login"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
